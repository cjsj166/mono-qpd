    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
        },

        {
            "name": "run",
            "type": "debugpy",
            "request": "launch",
            "program": "run.py",
            "cwd": "${workspaceFolder}/Depth-Anything-V2",
            "console": "integratedTerminal",
            "args": [
                "--img-path",
                "Depth-Anything-V2/assets/examples/demo01.jpg",
                "--input-size",
                "518",
                "--outdir",
                "results",
                // "--encoder",
                // "--pred-only",
                // "--grayscale"
            ]
        },

        {
            "name": "QPDNet evaluation",
            "type": "debugpy",
            "request": "launch",
            "program": "evaluate_quad.py",
            "console": "integratedTerminal",
            "args": [
                "--restore_ckpt",
                "checkpoints-CLR.pth",
                "--mixed_precision",
                "--save_result",
                "True",
                "--input_image_num",
                "2",
                "--datasets_path",
                "/mnt/d/Mono+Dual/QP-Data"
            ]
        },

        {
            "name": "Real_QPD_A, test",
            "type": "debugpy",
            "request": "launch",
            "program": "evaluate_quad.py",
            "console": "integratedTerminal",
            "args": [
                "--restore_ckpt",
                "checkpoints-CLR.pth",
                "--mixed_precision",
                "--save_result",
                "True",
                "--input_image_num",
                "2",
                "--datasets_path",
                "/mnt/d/dual-pixel-dataset/QP_real_scene_1218/Dataset_A_1218/scale3",
                "--dataset",
                "Real_QPD",
            ]
        },

        {
            "name": "Real_QPD_B, test",
            "type": "debugpy",
            "request": "launch",
            "program": "evaluate_quad.py",
            "console": "integratedTerminal",
            "args": [
                "--restore_ckpt",
                "checkpoints-CLR.pth",
                "--mixed_precision",
                "--save_result",
                "True",
                "--input_image_num",
                "2",
                "--datasets_path",
                "/mnt/d/dual-pixel-dataset/QP_real_scene_1218/Dataset_B_1218/scale3",
                "--dataset",
                "Real_QPD",
            ]
        },

        {
            "name": "MDD, test",
            "type": "debugpy",
            "request": "launch",
            "program": "evaluate_quad.py",
            "console": "integratedTerminal",
            "args": [
                "--restore_ckpt",
                "checkpoints-CLR.pth",
                "--mixed_precision",
                "--save_result",
                "True",
                "--input_image_num",
                "2",
                "--datasets_path",
                "/mnt/d/dual-pixel-dataset/MDD_dataset",
                "--dataset",
                "MDD",
            ]
        },

    ]
}

