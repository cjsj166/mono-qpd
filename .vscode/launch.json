    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
        },

        {
            "name": "DA-v2 test run",
            "type": "debugpy",
            "request": "launch",
            "program": "run.py",
            "cwd": "${workspaceFolder}/mono_qpd/Depth_Anything_V2",
            "console": "integratedTerminal",
            "args": [
                "--img-path",
                "assets/examples/demo01.jpg",
                "--input-size",
                "518",
                "--outdir",
                "results",
                // "--encoder",
                // "--pred-only",
                // "--grayscale"
            ]
        },


        {
            "name": "MonoQPD, train, qpd-train",
            "type": "debugpy",
            "request": "launch",
            "program": "train_mono_qpd.py",
            "console": "integratedTerminal",
            "args": [
                // "--restore_ckpt",
                // "checkpoints-CLR.pth",
                "--batch_size",
                "2",
                "--restore_ckpt_da_v2",
                "mono_qpd/Depth_Anything_V2/checkpoints/depth_anything_v2_vitl.pth",
                // "--save_result",
                // "True",
                // "--input_image_num",
                // "2",
                "--datasets_path",
                "/mnt/d/Mono+Dual/QP-Data",
                "--freeze_da_v2"
            ]
        },


        {
            "name": "Mono-QPD, eval, qpd-test",
            "type": "debugpy",
            "request": "launch",
            "program": "evaluate_mono_qpd.py",
            "console": "integratedTerminal",
            "args": [
                "--restore_ckpt",
                "result/checkpoints/20_epoch_30101_Mono-QPD.pth",
                "--datasets_path",
                "/mnt/d/Mono+Dual/QP-Data",
                "--freeze_da_v2"
            ]
        },

        
        {
            "name": "Mono-QPD, 20 epochs, eval, dpdisp",
            "type": "debugpy",
            "request": "launch",
            "program": "evaluate_mono_qpd.py",
            "console": "integratedTerminal",
            "args": [
                "--restore_ckpt",
                "result/checkpoints/20_epoch_30101_Mono-QPD.pth",
                "--datasets_path",
                "/mnt/d/dual-pixel-dataset/MDD_dataset",
                "--dataset",
                "MDD",
                "--save_path",
                "result/eval/20_epoch_30101_Mono-QPD"
            ]
        },

        {
            "name": "Real_QPD_A, test",
            "type": "debugpy",
            "request": "launch",
            "program": "evaluate_quad.py",
            "console": "integratedTerminal",
            "args": [
                "--restore_ckpt",
                "checkpoints-CLR.pth",
                "--mixed_precision",
                "--save_result",
                "True",
                "--input_image_num",
                "2",
                "--datasets_path",
                "/mnt/d/dual-pixel-dataset/QP_real_scene_1218/Dataset_A_1218/scale3",
                "--dataset",
                "Real_QPD",
            ]
        },

        {
            "name": "Real_QPD_B, test",
            "type": "debugpy",
            "request": "launch",
            "program": "evaluate_quad.py",
            "console": "integratedTerminal",
            "args": [
                "--restore_ckpt",
                "checkpoints-CLR.pth",
                "--mixed_precision",
                "--save_result",
                "True",
                "--input_image_num",
                "2",
                "--datasets_path",
                "/mnt/d/dual-pixel-dataset/QP_real_scene_1218/Dataset_B_1218/scale3",
                "--dataset",
                "Real_QPD",
            ]
        },

        {
            "name": "MDD, test",
            "type": "debugpy",
            "request": "launch",
            "program": "evaluate_quad.py",
            "console": "integratedTerminal",
            "args": [
                "--restore_ckpt",
                "checkpoints-CLR.pth",
                "--mixed_precision",
                "--save_result",
                "True",
                "--input_image_num",
                "2",
                "--datasets_path",
                "/mnt/d/dual-pixel-dataset/MDD_dataset",
                "--dataset",
                "MDD",
            ]
        },

    ]
}

